{% extends "_layouts/default.njk" %}
{%block body %}
{# <h1>Hello World</h1> #}
<div class="row center">
  <div class="col s12">
    <div class="card teal lighten-5">
      <div class="card-content black-text">
        <span class="card-title">Create new plugin</span>
        <div class="row">
          {# <form class="col s12" action="/app/submit" method="POST" enctype="multipart/form-data"> #}
          <form class="col s12" action="/app/create_plugin" method="POST">

            <!-- NAME INPUT ROW -->
            <div class="row">
              <div class="input-field col s12">
                <input name='name' id="plugin_name" type="text" class="validate" />
                <label for="name">Plugin name *</label>
              </div>
            </div>

            <!-- Plugin type -->
            {% include "submission/plugin_type.njk" %}

            <button class="btn waves-effect waves-light" type="submit" name="action">Create plugin
              <i class="material-icons right">send</i>
            </button>

          </form>
        </div>
      </div>
    </div>
  </div>
</div>


{% endblock %}
