{% extends "_layouts/auth.njk" %}
{%block body %}
{# <h1>Hello World</h1> #}
<div class="row">
  <div class="col s12 m6">
    <div class="card teal lighten-5">
      <div class="card-content black-text">
        <span class="card-title">Create new account</span>
        <div class="row">
          <form class="col s12" action="/signup" method="POST">
            <!-- NAME INPUT ROW -->
            <div class="row">
              <div class="input-field col s12">
                <input placeholder="eg.: author_name1, author_name2..." id="full_name" type="text" class="validate" />
                <label for="full_name">Full name</label>
              </div>
            </div>
            <!-- INSTITUTION TYPE CHECKBOXES -->
            <div class="row">
              <label for="type_institution">Institution type</label>
              <p>
                <label>
                  <input type="checkbox" class="filled-in" id="is_university" />
                  <span>University</span>
                </label>
              </p>
              <p>
                <label>
                  <input type="checkbox" class="filled-in" id="is_business" />
                  <span>Business</span>
                </label>
              </p>
            </div>
            <!-- INSTITUTION'S NAME -->
            <div class="row">
              <div class="input-field col s6">
                <input id="institution_name" type="text" class="validate">
                <label for="institution_name">Institution's name</label>
              </div>
              <div class="input-field col s6">
                <input placeholder="Teacher, manager, engineer..." id="role" type="text" class="validate">
                <label for="role">Role</label>
              </div>
            </div>
            <!-- EMAIL AND PASSWORD SECTION -->
            <div class="row">
              <div class="input-field col s12">
                <input id="email" type="email" class="validate">
                <label for="email">Email</label>
              </div>
              <div class="input-field col s12">
                <input id="password" type="password" class="validate">
                <label for="password">Password</label>
              </div>
            </div>

            <button class="btn waves-effect waves-light" type="submit" name="action">Create account
              <i class="material-icons right">send</i>
            </button>

          </form>
        </div>
      </div>

    </div>
  </div>
</div>


{% endblock %}
